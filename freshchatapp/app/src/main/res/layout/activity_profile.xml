<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@color/black">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/my_profile_pic"
                android:layout_width="241dp"
                android:layout_height="284dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"


                android:layout_marginStart="24dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/profile" />


            <Button
                android:id="@+id/my_post_btn"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Post"
                android:padding="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:layout_below="@+id/my_profile_pic"
                />

            <Button
                android:id="@+id/my_friends_btn"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Friends"
                android:textColor="@color/white"
                android:padding="15dp"
                android:layout_marginTop="30dp"
               android:layout_alignParentEnd="true"
                android:layout_below="@+id/my_profile_pic"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="400dp"
                android:background="@drawable/post_bg"


                >


                <TextView
                    android:id="@+id/my_profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingTop="20dp"
                    android:shadowColor="@color/black"
                    android:text="profile_name"
                    android:textAlignment="center"

                    android:textSize="17sp"
                    android:textStyle="bold"


                    />

                <TextView
                    android:id="@+id/my_profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_profile_name"
                    android:fontFamily="sans-serif-medium"
                    android:paddingTop="10dp"
                    android:text="username"
                    android:textAlignment="center"

                    android:textSize="15sp"


                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/my_profile_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_profile_username"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginRight="50dp"

                    android:paddingTop="10dp"



                    android:text="status"
                    android:textAlignment="center"

                    android:textSize="15sp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/my_profile_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_profile_status"
                    android:layout_marginTop="30dp"
                    android:fontFamily="sans-serif"

                    android:text="Country"


                    android:textAlignment="center"



                    android:textSize="14sp" />
                />

                <TextView
                    android:id="@+id/my_profile_dob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_profile_country"
                    android:fontFamily="sans-serif"
                    android:paddingTop="10dp"

                    android:text="DOB"


                    android:textAlignment="center"



                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/my_profile_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_profile_dob"
                    android:fontFamily="sans-serif"
                    android:paddingTop="10dp"

                    android:text="Gender"


                    android:textAlignment="center"



                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/my_profile_relationship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/my_profile_gender"
                    android:paddingTop="10dp"
                    android:layout_marginBottom="30dp"

                    android:text="Relationship"
                    android:textAlignment="center"



                    android:textSize="14sp"


                    />

            </RelativeLayout>


        </RelativeLayout>



    </ScrollView>
</RelativeLayout>